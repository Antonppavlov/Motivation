<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pavlov.p.anton.motivation.fragment.PlaceholderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quote_text"
            android:layout_width="match_parent"
            android:layout_height="472dp"
            android:gravity="center"
            android:onClick="clickText"
            android:text="quote_text"
            android:textColor="@color/colorTextMain"
            android:textSize="19sp"
            android:textStyle="normal|italic" />

        <CheckBox
            android:id="@+id/chbFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/favorite"
            android:layout_gravity="right"
            android:onClick="clickFavorite" />

    </LinearLayout>


    <TextView
        android:id="@+id/source_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end|right"
        android:onClick="clickText"
        android:text="source_text"
        android:textColor="@color/colorTextSource" />

</LinearLayout>
